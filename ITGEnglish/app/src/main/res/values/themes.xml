    <style name="AppTheme.ITGEnglish.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ITGEnglish.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ITGEnglish.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreen" parent="AppTheme.ITGEnglish">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <style name="RoundedButtonWithWhiteText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:theme">?android:attr/borderlessButtonStyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="ButtonSmall">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">275dp</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <style name="AppTheme.ITGEnglish.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ITGEnglish.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>